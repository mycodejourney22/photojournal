<%# app/views/devise/sessions/new.html.erb %>
<div class="login-container">
  <div class="login-card">
    <div class="login-header">
      <div class="login-logo">
        <div class="logo-circle"></div>
        <h2>363 PHOTOGRAPHY</h2>
      </div>
    </div>

    <h1 class="login-title">Log in</h1>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { class: 'login-input' },
                    wrapper_html: { class: 'login-field' },
                    label_html: { class: 'login-label' } %>

        <%= f.input :password,
                    required: false,
                    input_html: { class: 'login-input' },
                    wrapper_html: { class: 'login-field' },
                    label_html: { class: 'login-label' } %>

        <%= f.input :remember_me,
                    as: :boolean,
                    wrapper_html: { class: 'remember-me-field' },
                    input_html: { class: 'remember-me-checkbox' } if devise_mapping.rememberable? %>
      </div>

      <div class="login-actions">
        <%= f.button :submit, "Log in", class: 'login-button' %>
      </div>
    <% end %>

    <div class="login-links">
      <%= link_to "Forgot your password?", new_password_path(resource_name), class: 'login-helper-link' %>
    </div>
  </div>
</div>
