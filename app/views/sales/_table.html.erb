<table class="bordered-table" data-calendly-target="table">
        <thead>
          <tr>
            <th>Date</th>
            <th>Customer Name</th>
            <th>Customer Service Officer</th>
            <th>Product Name</th>
            <th>Amount Paid</th>
            <th>Payment type</th>
            <%# <th>Actions</th> %>
          </tr>
        </thead>
        <tbody>
          <% sales.each do |sale| %>
            <tr>
              <td><%= sale.date.to_date %></td>
              <td><%= sale.customer_name %></td>
              <td><%= sale.customer_service_officer_name %></td>
              <td><%= sale.product_service_name %></td>
              <td><%= sale.amount_paid %></td>
              <td><%= sale.payment_type %></td>
              <%# <td>
                <p><%= link_to 'Update Details', edit_sale_path(sale) %>
              <%# </td> %>
            </tr>
          <% end %>
        </tbody>
      </table>
