<!-- app/views/payments/make_payment.html.erb -->
<div class="container payment-container">
  <div class="payment-header">
    <div class="logo">
      <%= image_tag "james-lee-YIy1cd3xN4w-unsplash.jpg", class: "logo-image", alt: "363 Photography" %>
      <h2 class="logo-text">363 PHOTOGRAPHY</h2>
    </div>
    <h1 class="payment-title">Payment Preview</h1>
  </div>

  <div class="payment-card">
    <div class="payment-details">
      <div class="detail-row">
        <div class="detail-label">Name:</div>
        <div class="detail-value"><%= @appointment.name %></div>
      </div>

      <div class="detail-row">
        <div class="detail-label">Type of Shoot:</div>
        <div class="detail-value"><%= @price.shoot_type %></div>
      </div>

      <div class="detail-row">
        <div class="detail-label">Number of outfit:</div>
        <div class="detail-value"><%= @price.outfit %></div>
      </div>

      <div class="detail-row">
        <div class="detail-label">Appointment Time:</div>
        <div class="detail-value"><%= @appointment.formatted_start_time %>, <%= @appointment.formatted_time %></div>
      </div>

      <!-- EXISTING Credit Section - UNCHANGED -->
      <% if @available_credits && @available_credits > 0 %>
        <div class="credits-section">
          <div class="detail-row credits-available">
            <div class="detail-label">Available Credits:</div>
            <div class="detail-value">‚Ç¶<%= number_with_delimiter(@available_credits) %></div>
          </div>

          <div class="credits-form">
            <h3>Would you like to use your credits?</h3>

            <%= form_with url: make_payment_path, method: :get, class: "credits-options-form" do |form| %>
              <%= form.hidden_field :appointment_id, value: @appointment.id %>
              <%= form.hidden_field :coupon_code, value: @applied_coupon&.code if @applied_coupon %>

              <div class="credit-options">
                <% if @available_credits >= @price.amount %>
                  <div class="credit-option">
                    <%= form.radio_button :apply_credits, @price.amount,
                                         id: "full_payment",
                                         checked: @credits_applied == @price.amount %>
                    <%= form.label :apply_credits_full, "Use all credits (‚Ç¶#{number_with_delimiter(@price.amount)}) - FREE booking!", for: "full_payment" %>
                  </div>
                <% end %>

                <div class="credit-option">
                  <%= form.radio_button :apply_credits, [@available_credits, @price.amount].min,
                                       id: "partial_payment",
                                       checked: @credits_applied == [@available_credits, @price.amount].min && @credits_applied < @price.amount %>
                  <%= form.label :apply_credits_partial, "Use available credits (‚Ç¶#{number_with_delimiter([@available_credits, @price.amount].min)})", for: "partial_payment" %>
                </div>

                <div class="credit-option">
                  <%= form.radio_button :apply_credits, 0,
                                       id: "no_credits",
                                       checked: @credits_applied == 0 %>
                  <%= form.label :apply_credits_none, "Don't use credits", for: "no_credits" %>
                </div>
              </div>

              <%= form.submit "Update Payment", class: "credits-apply-btn" %>
            <% end %>
          </div>
        </div>
      <% end %>

      <!-- NEW: Coupon Section - OPTIONAL -->
      <div class="coupon-section">
        <div class="coupon-header">
          <h3>üé´ Have a coupon code?</h3>
          <small class="coupon-hint">Enter codes like CHRISTMAS25, REFER123, WELCOME10, etc.</small>
        </div>
        
        <%= form_with url: make_payment_path, method: :get, class: "coupon-form", local: true do |form| %>
          <%= form.hidden_field :appointment_id, value: @appointment.id %>
          <%= form.hidden_field :apply_credits, value: @credits_applied if @credits_applied %>
          
          <div class="coupon-input-group">
            <%= form.text_field :coupon_code, 
                               placeholder: "Enter coupon code", 
                               value: @applied_coupon&.code,
                               class: "coupon-input",
                               maxlength: 50 %>
            <%= form.submit "Apply Coupon", class: "coupon-apply-btn" %>
          </div>
        <% end %>
        
        <!-- Coupon Messages -->
        <% if @coupon_error %>
          <div class="coupon-message coupon-error">
            ‚ùå <%= @coupon_error %>
          </div>
        <% end %>
        
        <% if @applied_coupon %>
          <div class="coupon-message coupon-success">
            ‚úÖ Coupon "<strong><%= @applied_coupon.code %></strong>" applied! 
            You saved <strong>‚Ç¶<%= number_with_delimiter(@coupon_discount || 0) %></strong>
            <%= link_to "Remove", make_payment_path(appointment_id: @appointment.id, remove_coupon: true, apply_credits: @credits_applied), 
                        class: "remove-coupon-link" %>
          </div>
          <% if @applied_coupon.description.present? %>
            <div class="coupon-description">
              <small><%= @applied_coupon.description %></small>
            </div>
          <% end %>
        <% end %>
      </div>

      <!-- Payment Summary with All Discounts -->
      <div class="payment-summary">
        <div class="detail-row">
          <div class="detail-label">Original Amount:</div>
          <div class="detail-value <%= 'has-discount' if (@credits_applied > 0) || (@coupon_discount && @coupon_discount > 0) || @appointment.referral_source.present? %>">
            ‚Ç¶<%= number_with_delimiter(@price.amount) %>
          </div>
        </div>

        <!-- Credits Applied -->
        <% if @credits_applied && @credits_applied > 0 %>
          <div class="detail-row discount-row">
            <div class="detail-label">Credits Applied:</div>
            <div class="detail-value discount-value">- ‚Ç¶<%= number_with_delimiter(@credits_applied) %></div>
          </div>
        <% end %>

        <!-- NEW: Coupon Discount -->
        <% if @applied_coupon && (@coupon_discount && @coupon_discount > 0) %>
          <div class="detail-row discount-row">
            <div class="detail-label">Coupon Discount (<%= @applied_coupon.code %>):</div>
            <div class="detail-value discount-value">- ‚Ç¶<%= number_with_delimiter(@coupon_discount) %></div>
          </div>
        <% end %>

        <!-- EXISTING: Referral Discount - UNCHANGED -->
        <% if @appointment.referral_source.present? %>
          <% referral = Referral.find_by(code: @appointment.referral_source) %>
          <% discount_amount = referral&.referred_discount || 5000 %>

          <div class="detail-row discount-row">
            <div class="detail-label">Referral Discount:</div>
            <div class="detail-value discount-value">- ‚Ç¶<%= number_with_delimiter(discount_amount) %></div>
          </div>
        <% end %>

        <!-- Final Amount -->
        <div class="detail-row final-amount">
          <div class="detail-label">Final Amount Due:</div>
          <div class="detail-value">‚Ç¶<%= number_with_delimiter(@final_amount) %></div>
        </div>
      </div>
    </div>

    <!-- EXISTING Payment Form - UNCHANGED -->
    <%= form_with url: paystack_payment_path(appointment_id: @appointment.id), method: :post, data: { turbo: false }, class: "payment-form" do |form| %>
      <%= hidden_field_tag :price_id, @price.id %>
      <%= hidden_field_tag :credits_applied, @credits_applied %>
      <% if @final_amount > 0 %>
        <%= submit_tag "Proceed to Payment", class: "payment-button" %>
      <% else %>
        <%= submit_tag "Complete Booking", class: "payment-button payment-button-free" %>
      <% end %>
    <% end %>
  </div>
</div>

