<div class="reports-container">
  <!-- Header -->
  <div class="reports-header">
    <h1>Staff Performance Reports</h1>
    <%= link_to staff_reports_path(format: :csv, **request.query_parameters), class: "export-btn" do %>
      <i class="fas fa-download"></i> Export CSV
    <% end %>
  </div>

  <!-- Filters -->
  <div class="filters-section">
    <%= form_with url: staff_reports_path, method: :get, local: true, class: "filters-form" do |f| %>
      <div class="filters-row">
        <div class="filter-group">
          <label>Start Date</label>
          <%= f.date_field :start_date, value: @start_date, max: Date.current, class: "filter-input" %>
        </div>
        
        <div class="filter-group">
          <label>End Date</label>
          <%= f.date_field :end_date, value: @end_date, max: Date.current, class: "filter-input" %>
        </div>
        
        <div class="filter-group">
          <label>Location</label>
          <%= f.select :location,
                      [['All Locations', 'all']] + @available_locations.map { |loc| [loc, loc] },
                      { selected: @selected_location || 'all' },
                      { class: "filter-input" } %>
        </div>
        
        <div class="filter-group">
          <label>Staff Type</label>
          <%= f.select :staff_type, [
            ['All Staff', 'all'],
            ['Photographers Only', 'photographer'],
            ['Editors Only', 'editor']
          ], { selected: @selected_staff_type }, { class: "filter-input" } %>
        </div>
        
        <%= f.submit "Apply Filters", class: "apply-filters-btn" %>
        <%= link_to "Reset", staff_reports_path, class: "reset-btn" %>
      </div>
    <% end %>

    <!-- Quick Filter Buttons -->
    <div class="quick-filters">
      <%= link_to "Today", staff_reports_path(period: 'today'), 
          class: "quick-filter-btn #{'active' if @selected_period == 'today'}" %>
      <%= link_to "Last 7 Days", staff_reports_path(period: 'last_week'), 
          class: "quick-filter-btn #{'active' if @selected_period == 'last_week'}" %>
      <%= link_to "Last 30 Days", staff_reports_path(start_date: 30.days.ago.to_date, end_date: Date.current), 
          class: "quick-filter-btn" %>
      <%= link_to "This Month", staff_reports_path(period: 'this_month'), 
          class: "quick-filter-btn #{'active' if @selected_period == 'this_month'}" %>
    </div>

    <!-- Filter Info -->
    <div class="filter-info">
      Showing data from <strong><%= @start_date.strftime("%B %d, %Y") %></strong> to <strong><%= @end_date.strftime("%B %d, %Y") %></strong>
      <% if @selected_location && @selected_location != 'all' %>
        for <strong><%= @selected_location %></strong>
      <% else %>
        for <strong>all locations</strong>
      <% end %>
    </div>
  </div>

  <!-- Metrics Grid -->
  <div class="metrics-container">
    <div class="metric-card">
      <div class="metric-number"><%= @total_photoshoots %></div>
      <div class="metric-title">Total Photoshoots</div>
      <div class="metric-description">Photoshoots scheduled for this period</div>
    </div>

    <div class="metric-card">
      <div class="metric-number"><%= @completed_photoshoots %></div>
      <div class="metric-title">Completed Shoots</div>
      <div class="metric-description">Sessions that were successfully completed</div>
    </div>

    <div class="metric-card">
      <div class="metric-number"><%= @pending_photoshoots %></div>
      <div class="metric-title">Pending Edits</div>
      <div class="metric-description">Shoots awaiting editing completion</div>
    </div>

    <div class="metric-card">
      <div class="metric-number">
        <%= (@total_photoshoots > 0 ? ((@completed_photoshoots.to_f / @total_photoshoots) * 100).round(1) : 0) %>%
      </div>
      <div class="metric-title">Completion Rate</div>
      <div class="metric-description">Completed shoots / Total shoots</div>
    </div>

    <div class="metric-card">
      <div class="metric-number"><%= @photographer_stats.count %></div>
      <div class="metric-title">Active Photographers</div>
      <div class="metric-description">Photographers with shoots this period</div>
    </div>

    <div class="metric-card">
      <div class="metric-number"><%= @editor_stats.count %></div>
      <div class="metric-title">Active Editors</div>
      <div class="metric-description">Editors with assignments this period</div>
    </div>

    <div class="metric-card">
      <div class="metric-number"><%= @average_selections %></div>
      <div class="metric-title">Avg. Selections</div>
      <div class="metric-description">Average selections per photoshoot</div>
    </div>

    <div class="metric-card">
      <div class="metric-number">
        <% total_selections = @photographer_stats.sum { |s| s[:total_selections] } %>
        <%= total_selections %>
      </div>
      <div class="metric-title">Total Selections</div>
      <div class="metric-description">Total photos captured this period</div>
    </div>
  </div>

  <!-- Charts -->
  <div class="charts-container">
    <div class="chart-section">
      <h3>Daily Performance Trend</h3>
      <canvas id="dailyPerformanceChart"></canvas>
    </div>
    
    <div class="chart-section">
      <h3>Staff Productivity</h3>
      <canvas id="staffProductivityChart"></canvas>
    </div>
  </div>

  <!-- Staff Tables -->
  <% if @selected_staff_type == 'all' || @selected_staff_type == 'photographer' %>
    <div class="staff-section">
      <div class="staff-section-header">
        <h2>Photographer Performance</h2>
        <span class="staff-count"><%= @photographer_stats.count %> photographers</span>
      </div>

      <div class="staff-table">
        <div class="staff-table-header">
          <div class="col-staff">Photographer</div>
          <div class="col-number">Shoots</div>
          <div class="col-number">Completed</div>
          <div class="col-number">Pending</div>
          <div class="col-number">Selections</div>
          <div class="col-number">Avg. Selections</div>
          <div class="col-rate">Completion Rate</div>
          <div class="col-locations">Locations</div>
        </div>

        <% if @photographer_stats.any? %>
          <% @photographer_stats.sort_by { |s| -s[:total_shoots] }.each do |stat| %>
            <div class="staff-table-row">
              <div class="col-staff">
                <div class="staff-profile">
                  <div class="staff-avatar photographer">
                    <%= stat[:staff].name.split(' ').map { |n| n[0].upcase }.join('') %>
                  </div>
                  <span class="staff-name"><%= stat[:staff].name %></span>
                </div>
              </div>
              <div class="col-number"><%= stat[:total_shoots] %></div>
              <div class="col-number success"><%= stat[:completed_shoots] %></div>
              <div class="col-number warning"><%= stat[:pending_shoots] %></div>
              <div class="col-number"><%= stat[:total_selections] %></div>
              <div class="col-number"><%= stat[:average_selections] %></div>
              <div class="col-rate">
                <span class="rate-percentage"><%= stat[:completion_rate] %>%</span>
                <div class="rate-bar">
                  <div class="rate-progress" style="width: <%= stat[:completion_rate] %>%"></div>
                </div>
              </div>
              <div class="col-locations">
                <% stat[:locations].each do |location, count| %>
                  <span class="location-badge"><%= location %>: <%= count %></span>
                <% end %>
              </div>
            </div>
          <% end %>
        <% else %>
          <div class="empty-message">No photographer data for the selected period</div>
        <% end %>
      </div>
    </div>
  <% end %>

  <% if @selected_staff_type == 'all' || @selected_staff_type == 'editor' %>
    <div class="staff-section">
      <div class="staff-section-header">
        <h2>Editor Performance</h2>
        <span class="staff-count"><%= @editor_stats.count %> editors</span>
      </div>

      <div class="staff-table">
        <div class="staff-table-header">
          <div class="col-staff">Editor</div>
          <div class="col-number">Assignments</div>
          <div class="col-number">Completed</div>
          <div class="col-number">Pending</div>
          <div class="col-number">Edited</div>
          <div class="col-number">Avg. Selections</div>
          <div class="col-rate">Completion Rate</div>
          <div class="col-locations">Locations</div>
        </div>

        <% if @editor_stats.any? %>
          <% @editor_stats.sort_by { |s| -s[:total_shoots] }.each do |stat| %>
            <div class="staff-table-row">
              <div class="col-staff">
                <div class="staff-profile">
                  <div class="staff-avatar editor">
                    <%= stat[:staff].name.split(' ').map { |n| n[0].upcase }.join('') %>
                  </div>
                  <span class="staff-name"><%= stat[:staff].name %></span>
                </div>
              </div>
              <div class="col-number"><%= stat[:total_shoots] %></div>
              <div class="col-number success"><%= stat[:completed_edits] %></div>
              <div class="col-number warning"><%= stat[:pending_edits] %></div>
              <div class="col-number"><%= stat[:total_selections_edited] %></div>
              <div class="col-number"><%= stat[:average_selections_per_shoot] %></div>
              <div class="col-rate">
                <span class="rate-percentage"><%= stat[:completion_rate] %>%</span>
                <div class="rate-bar">
                  <div class="rate-progress" style="width: <%= stat[:completion_rate] %>%"></div>
                </div>
              </div>
              <div class="col-locations">
                <% stat[:locations].each do |location, count| %>
                  <span class="location-badge"><%= location %>: <%= count %></span>
                <% end %>
              </div>
            </div>
          <% end %>
        <% else %>
          <div class="empty-message">No editor data for the selected period</div>
        <% end %>
      </div>
    </div>
  <% end %>

  <!-- Location Performance -->
  <div class="staff-section">
    <div class="staff-section-header">
      <h2>Performance by Location</h2>
    </div>
    
    <div class="location-grid">
      <% @available_locations.each do |location| %>
        <div class="location-card">
          <h3 class="location-name"><%= location %></h3>
          <% location_data = @location_breakdown[location] || {} %>
          <% total = location_data['Total'] || 0 %>
          <% completed = location_data['Sent'] || 0 %>
          <% pending = location_data['Pending'] || 0 %>
          
          <div class="location-metrics">
            <div class="location-metric">
              <div class="location-metric-number"><%= total %></div>
              <div class="location-metric-label">Total</div>
            </div>
            <div class="location-metric success">
              <div class="location-metric-number"><%= completed %></div>
              <div class="location-metric-label">Completed</div>
            </div>
            <div class="location-metric warning">
              <div class="location-metric-number"><%= pending %></div>
              <div class="location-metric-label">Pending</div>
            </div>
          </div>
          
          <% if total > 0 %>
            <div class="location-completion">
              <%= ((completed.to_f / total) * 100).round(1) %>% completion rate
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<script type="module">
import { Chart, registerables } from 'chart.js';
Chart.register(...registerables);

document.addEventListener('DOMContentLoaded', function() {
  // Daily Performance Chart
  const dailyCtx = document.getElementById('dailyPerformanceChart');
  if (dailyCtx) {
    const dailyData = <%= raw @daily_performance_data.to_json %>;
    
    new Chart(dailyCtx, {
      type: 'line',
      data: {
        labels: dailyData.map(d => new Date(d.date).toLocaleDateString('en-US', { month: 'short', day: 'numeric' })),
        datasets: [
          {
            label: 'Total Shoots',
            data: dailyData.map(d => d.total_shoots),
            borderColor: '#4285F4',
            backgroundColor: 'rgba(66, 133, 244, 0.1)',
            tension: 0.4,
            fill: true
          },
          {
            label: 'Completed',
            data: dailyData.map(d => d.completed_shoots),
            borderColor: '#34A853',
            backgroundColor: 'rgba(52, 168, 83, 0.1)',
            tension: 0.4,
            fill: true
          }
        ]
      },
      options: {
        responsive: true,
        maintainAspectRatio: false,
        plugins: { legend: { position: 'bottom' } },
        scales: { y: { beginAtZero: true } }
      }
    });
  }

  // Staff Productivity Chart
  const staffCtx = document.getElementById('staffProductivityChart');
  if (staffCtx) {
    const photographerData = <%= raw @photographer_stats.map { |s| { name: s[:staff].name, value: s[:total_shoots] } }.to_json %>;
    const editorData = <%= raw @editor_stats.map { |s| { name: s[:staff].name, value: s[:total_shoots] } }.to_json %>;
    
    new Chart(staffCtx, {
      type: 'bar',
      data: {
        labels: [...photographerData.map(d => d.name), ...editorData.map(d => d.name)],
        datasets: [
          {
            label: 'Photographers',
            data: [...photographerData.map(d => d.value), ...Array(editorData.length).fill(0)],
            backgroundColor: '#4285F4'
          },
          {
            label: 'Editors',
            data: [...Array(photographerData.length).fill(0), ...editorData.map(d => d.value)],
            backgroundColor: '#34A853'
          }
        ]
      },
      options: {
        responsive: true,
        maintainAspectRatio: false,
        plugins: { legend: { position: 'bottom' } },
        scales: { y: { beginAtZero: true } }
      }
    });
  }
});
</script>

