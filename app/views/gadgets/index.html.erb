<div class="container" data-controller="calendly" >
  <%= render "shared/sidebar" %>
  <section class="content">
    <div class="d-flex justify-content-between align-items-center mb-4">
      <h1>All Asset Purchase</h1>
      <div class="row justify-content-center w-50">
        <div class=" my-3">
          <%= form_with url: gadgets_path, method: :get, class: "d-flex" do %>
            <%= text_field_tag :query,
                  params[:query],
                  class: "form-control search-border",
                  placeholder: "Category or Description or Staff"
              %>
          <% end %>
        </div>
      </div>
      <%= link_to 'New gadget', new_gadget_path, class: "btn-photoshoot btn" %>
    </div>
    <% if  @gadgets.empty? %>
      <h3 class="text-center">You do not have any gadgets recorded yet!!!</h3>
    <% else %>
      <div>
        <%= render "gadget_table", gadgets: @gadgets %>
      </div>
    <% end %>
    <%= paginate @gadgets %>
  </section>

</div>
