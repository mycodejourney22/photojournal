<div class="public-container">
  <div class="public-header">
    <div class="public-logo">
      <div class="public-logo-icon"></div>
      <div class="public-logo-text">363 PHOTOGRAPHY</div>
    </div>
  </div>

  <div class="referral-hero">
    <h1 class="referral-title">You've Been Referred to 363 Photography!</h1>
    <p class="referral-subtitle">by <%= @referral.referrer.name %></p>
  </div>

  <div class="referral-card">
    <div class="referral-reward">
      <div class="referral-discount-label">Your Special Discount</div>
      <div class="referral-discount-amount">â‚¦<%= @referral.referred_discount  %></div>
      <div class="referral-discount-description">off your first photoshoot</div>
    </div>

    <div class="referral-message">
      <p><%= @referral.referrer.name.split(' ').first %> thinks you'd love our photography services and has shared this exclusive offer with you.</p>
      <p>At 363 Photography, we capture beautiful, timeless moments that you'll cherish forever.</p>
    </div>

    <div class="referral-cta">
      <%= link_to "Claim Your Discount", apply_referral_path(@referral.code), class: "referral-button" %>
    </div>
  </div>

  <div class="referral-showcase">
    <h2 class="showcase-title">Our Photography</h2>
    <div class="showcase-grid">
      <!-- Sample images -->
      <% 4.times do |i| %>
        <div class="showcase-item">
          <div class="showcase-image" style="background-image: url('https://images.unsplash.com/photo-1741230713152-244939ffbd75?q=80&w=600&auto=format&fit=crop');"></div>
        </div>
      <% end %>
    </div>
  </div>

  <div class="referral-footer">
    <p>363 Photography - Creating beautiful memories since 2020</p>
    <p>Questions? Contact us at info@363photography.org</p>
  </div>
</div>

