<div class="container">
  <section>
    <h1 class="text-center">Add New Appointment</h1>
    <%= simple_form_for @appointment do |f| %>
      <%= f.error_notification %>

      <div class="card card_photoshoot">
        <div class="grid-container">
          <%= f.input :name, label_html:{class: 'fw-bold'} %>
          <%= f.input :email, label_html:{class: 'fw-bold'} %>
          <%= f.input :location, label_html:{class: 'fw-bold'}, collection: ['KM 22 Lekki Epe Express way , Ilaje Bus Stop Lagos', '66 Adeniyi Jones , Ikeja Lagos', '115A bode thomas street, Surulere Lagos'] %>
          <%= f.input :start_time ,  as: :string, label_html:{class: 'fw-bold'}, input_html: {data: { controller: "datepicker" }} %>
        </div>
        <%= f.simple_fields_for :questions do |question_form| %>
          <div class="nested-fields">
            <%= question_form.label :question, question_form.object.question, class: 'fw-bold' %>
            <%= question_form.hidden_field :question %>
            <% if question_form.object.question == "Phone number" %>
              <%= question_form.input :answer, as: :string, class: "w-50", label: false %>
            <% elsif question_form.object.question == 'Type of shoot' %>
              <div class="grid_app_item">
                  <%= question_form.input :answer, as: :radio_buttons, collection: ['Kiddies', 'Newborn', 'Family', 'Personal', 'Maternity', 'PreWedding'], label: false %>
              </div>
            <% end %>
            <%= question_form.hidden_field :_destroy %>
          </div>
        <% end %>
        <%= f.submit "Schedule Event", class: "btn btn-photoshoot mt-4" %>
      </div>
    <% end %>
  </section>
</div>
