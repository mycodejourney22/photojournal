<!-- app/views/appointments/thank_you.html.erb -->
<div class="thank-you-container">
  <div class="logo-header">
    <div class="logo-circle"></div>
    <h1 class="logo-text">363 PHOTOGRAPHY</h1>
  </div>

  <div class="thank-you-card">
    <div class="success-icon">
      <svg xmlns="http://www.w3.org/2000/svg" width="64" height="64" viewBox="0 0 24 24" fill="none" stroke="#3dae2b" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"></path>
        <polyline points="22 4 12 14.01 9 11.01"></polyline>
      </svg>
    </div>

    <h1>Thank You <%= @appointment.name.split(" ").first %>!</h1>
    <p class="confirmation">Your appointment has been scheduled.</p>

    <% if !@appointment.payment_status && @appointment.price_id.present? %>
      <div class="payment-alert">
        <p>Complete your booking by using the link below to make payment.</p>
        <%= link_to "Make Payment Now", make_payment_path(appointment_id: @appointment.id), class: "action-button payment-button" %>
      </div>
      <hr class="divider">
    <% end %>

    <div class="appointment-details">
      <h2>Appointment Details</h2>
      <div class="detail-row">
        <div class="detail-label">Date:</div>
        <div class="detail-value"><%= @appointment.start_time.strftime("%B %d, %Y") %></div>
      </div>
      <div class="detail-row">
        <div class="detail-label">Time:</div>
        <div class="detail-value"><%= @appointment.start_time.strftime("%I:%M %p") %></div>
      </div>
      <div class="detail-row">
        <div class="detail-label">Location:</div>
        <div class="detail-value"><%= @appointment.location %></div>
      </div>
    </div>

    <% if @appointment.referral_source.present? %>
      <div class="referral-box">
        <h3>Referral Discount Applied!</h3>
        <p>Your booking includes a â‚¦5,000 discount thanks to a referral.</p>
      </div>
    <% end %>

    <div class="policies-section">
      <h2>Studio Policies</h2>

      <div class="policy-item">
        <h3>Delivery Timeline</h3>
        <p>We deliver edited pictures within 48 hours for photoshoots taken during weekdays. For weekend appointments, delivery will be within 72 hours.</p>
      </div>

      <div class="policy-item">
        <h3>Punctuality Policy</h3>
        <p>Please arrive 15 minutes before your scheduled time. Late arrivals may result in reduced session time or cancellation with a penalty fee. If you're running late, please contact us immediately.</p>
      </div>

      <div class="policy-item">
        <h3>Rescheduling & Cancellation</h3>
        <p>Rescheduling requests must be made at least 24 hours in advance. Last-minute cancellations may incur a fee of 50% of your booking value.</p>
      </div>
    </div>

    <div class="contact-info">
      <p>If you have any questions, please contact us at <a href="mailto:info@363photography.org">info@363photography.org</a></p>
    </div>

    <%= link_to "Return to Home", public_home_path, class: "action-button home-button" %>
  </div>
</div>

