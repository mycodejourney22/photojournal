    <% @shoot_types.each do |shoot_type| %>
      <%= link_to select_price_appointments_path(shoot_type: shoot_type.shoot_type),  class: "package-link" do %>
        <div class="package">
          <i class="fa-solid <%= shoot_type.icon %>"></i> <!-- Dynamic Icon -->
