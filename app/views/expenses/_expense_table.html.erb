
<table class="bordered-table">
  <thead>
    <tr>
      <th>Date</th>
      <th>Description</th>
      <th>Category</th>
      <th>Staff</th>
      <th>Amount</th>
      <th>Location</th>
    </tr>
  </thead>
  <tbody>
    <% expenses.each do |expense| %>
      <tr>
        <td><%= expense.date %></td>
        <td><%= expense.description.capitalize %></td>
        <td><%= expense.category %></td>
        <td><%= expense.staff_name %></td>
        <td><%= number_to_currency(expense.amount, unit: "â‚¦") %></td>
        <td><%= expense.location.capitalize %></td>
      </tr>
    <% end %>
  </tbody>
</table>
