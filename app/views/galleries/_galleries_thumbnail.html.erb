  <section class="content">
      <img src="https://photos.smugmug.com/photos/i-qbnPxn4/0/KJXHm9srn4rFbq2zKmvmV6F4965gs9CBMQdsQkCvt/D/i-qbnPxn4-D.jpg" alt="">

    <div class="d-flex justify-content-between align-items-center mb-4">
      <h2><%= @gallery.title.capitalize %></h2>
      <%= link_to 'New Photos', edit_appointment_gallery_path(@appointment, @gallery), class: "btn-photoshoot btn" %>
    </div>
    <div class="d-flex justify-content-between">
      <%= link_to "Photoshoot Info", appointment_path(@appointment), class: "black-link" %>
      <div>
        <p><%= link_to 'Send Via Email', send_gallery_path(@appointment, @gallery), method: :post , class: "black-link" %></p>
        <p>Editor: <%= @editor_name %></p>
        <p>Photographer: <%= @photographer_name %></p>
      </div>
    </div>
    <div>
  <div class="d-flex flex-wrap custom-flex">
    <% @gallery.photos.each_with_index do |photo, index| %>
      <div>
        <a href="<%= stream_photo_gallery_path(@gallery, photo.id) %>" data-bs-toggle="modal" data-bs-target="#carouselModal" data-bs-slide-to="<%= index %>">
          <%= image_tag photo.variant(resize_to_limit: [300, 300]), class: 'gallery-img', loading: 'lazy' %>
        </a>
      </div>
    <% end %>
  </div>

    </div>

  </section>
