<div class="g-content__toolbar">
  <div class="g-content__tabs">
    <span class="g-content__tab g-content__tab--active">Admin Setup Dashboard</span>
  </div>
</div>


<!-- Stats Cards Section - using your exact style -->
<div style="display: grid; grid-template-columns: repeat(4, 1fr); gap: 20px; margin: 20px 0 40px 0;">
  <div style="text-align: center; padding: 20px; border: 1px solid #e5e5e5; border-radius: 8px; background: white;">
    <div style="font-size: 36px; font-weight: 600; color: #333; margin-bottom: 8px;"><%= @stats[:prices] %></div>
    <div style="font-size: 14px; color: #666;">Price Packages</div>
    <div style="font-size: 12px; color: #999; margin-top: 4px;">Available pricing options</div>
  </div>
  
  <div style="text-align: center; padding: 20px; border: 1px solid #e5e5e5; border-radius: 8px; background: white;">
    <div style="font-size: 36px; font-weight: 600; color: #333; margin-bottom: 8px;"><%= @stats[:staff_members] %></div>
    <div style="font-size: 14px; color: #666;">Staff Members</div>
    <div style="font-size: 12px; color: #999; margin-top: 4px;">Team members registered</div>
  </div>
  
  <div style="text-align: center; padding: 20px; border: 1px solid #e5e5e5; border-radius: 8px; background: white;">
    <div style="font-size: 36px; font-weight: 600; color: #333; margin-bottom: 8px;"><%= @stats[:studios] %></div>
    <div style="font-size: 14px; color: #666;">Studio Locations</div>
    <div style="font-size: 12px; color: #999; margin-top: 4px;">Active studio branches</div>
  </div>
  
  <div style="text-align: center; padding: 20px; border: 1px solid #e5e5e5; border-radius: 8px; background: white;">
    <div style="font-size: 36px; font-weight: 600; color: #333; margin-bottom: 8px;"><%= @stats[:users] %></div>
    <div style="font-size: 14px; color: #666;">User Accounts</div>
    <div style="font-size: 12px; color: #999; margin-top: 4px;">System users created</div>
  </div>
</div>

<!-- Management Options using g-table structure -->
<div class="g-table__header">
  <div class="g-table__col--name">Management Area</div>
  <div class="g-table__col--description" style="width: 40%;">Description</div>
  <div class="g-table__col--count">Count</div>
  <div class="g-table__col--actions">Actions</div>
</div>

<div class="g-table__row">
  <div class="g-table__status g-table__status--confirmed"></div>
  <div class="g-table__col--name g-table__cell">
    <div class="g-table__name-container">
      <div class="g-table__name">Price Management</div>
    </div>
  </div>
  <div class="g-table__col--description g-table__cell">
    Manage photography package prices, shoot types, and pricing tiers for different services.
  </div>
  <div class="g-table__col--count g-table__cell">
    <%= @stats[:prices] %>
  </div>
  <div class="g-table__col--actions g-table__cell">
    <%= link_to "Manage Prices", admin_prices_path, class: "g-button--link" %>
  </div>
</div>

