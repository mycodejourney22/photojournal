<style>
    .hero { min-height: 100vh; display: flex; align-items: center; justify-content: center; position: relative; padding: 0 5%; }
    .hero-bg { position: absolute; top: 0; left: 0; width: 100%; height: 100%; background: radial-gradient(ellipse at 20% 80%, rgba(201, 162, 39, 0.08) 0%, transparent 50%), radial-gradient(ellipse at 80% 20%, rgba(201, 162, 39, 0.05) 0%, transparent 50%), linear-gradient(135deg, var(--warm-black) 0%, var(--charcoal) 100%); }
