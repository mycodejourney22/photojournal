    .hero p { font-size: 1.15rem; color: var(--warm-gray); max-width: 600px; margin: 0 auto 2.5rem; }
    .hero-cta { display: inline-flex; align-items: center; gap: 1rem; padding: 1rem 2.5rem; background: var(--gold); color: var(--warm-black); text-decoration: none; font-weight: 600; font-size: 0.9rem; letter-spacing: 0.1em; text-transform: uppercase; transition: all 0.4s ease; }
    .hero-cta:hover { background: var(--cream); transform: translateY(-2px); box-shadow: 0 20px 40px rgba(201, 162, 39, 0.3); }
    .about { background: linear-gradient(180deg, var(--warm-black) 0%, var(--charcoal) 100%); }
    .about-grid { display: grid; grid-template-columns: repeat(3, 1fr); gap: 3rem; max-width: 1200px; margin: 0 auto; }
    .about-card { padding: 3rem 2rem; background: rgba(255, 255, 255, 0.02); border: 1px solid rgba(201, 162, 39, 0.1); transition: all 0.4s ease; }
    .about-card:hover { background: rgba(255, 255, 255, 0.04); transform: translateY(-5px); }
    .about-icon { width: 60px; height: 60px; display: flex; align-items: center; justify-content: center; border: 1px solid var(--gold); color: var(--gold); margin-bottom: 1.5rem; font-size: 1.5rem; }
    .about-card h3 { font-family: 'Playfair Display', serif; font-size: 1.5rem; margin-bottom: 1rem; }
    .about-card p { color: var(--warm-gray); font-size: 0.95rem; }
    .curriculum { background: var(--charcoal); }
    .curriculum-container { max-width: 1000px; margin: 0 auto; }
    .curriculum-module { display: grid; grid-template-columns: 120px 1fr; gap: 3rem; padding: 3rem 0; border-bottom: 1px solid rgba(255, 255, 255, 0.05); }
    .module-number { font-family: 'Playfair Display', serif; font-size: 4rem; font-weight: 300; color: var(--gold); opacity: 0.5; }
    .module-content h3 { font-family: 'Playfair Display', serif; font-size: 1.5rem; margin-bottom: 0.75rem; }
    .module-content p { color: var(--warm-gray); margin-bottom: 1rem; }
    .module-topics { display: flex; flex-wrap: wrap; gap: 0.5rem; }
    .module-topics span { padding: 0.4rem 1rem; background: rgba(201, 162, 39, 0.1); color: var(--gold-light); font-size: 0.8rem; }
    .pricing { background: linear-gradient(180deg, var(--charcoal) 0%, var(--warm-black) 100%); }
    .pricing-cards { display: grid; grid-template-columns: repeat(2, 1fr); gap: 2rem; max-width: 900px; margin: 0 auto; }
    .pricing-card { padding: 3rem; background: rgba(255, 255, 255, 0.02); border: 1px solid rgba(255, 255, 255, 0.05); transition: all 0.4s ease; position: relative; }
    .pricing-card.featured { border-color: var(--gold); background: linear-gradient(135deg, rgba(201, 162, 39, 0.08) 0%, rgba(201, 162, 39, 0.02) 100%); }
    .pricing-card.featured::before { content: 'Most Popular'; position: absolute; top: -12px; left: 50%; transform: translateX(-50%); padding: 0.4rem 1.5rem; background: var(--gold); color: var(--warm-black); font-size: 0.7rem; font-weight: 600; text-transform: uppercase; }
