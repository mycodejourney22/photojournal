<%# app/views/training/payment.html.erb %>

<nav>
    <%= link_to training_path, class: "logo" do %>
        363 <span>Photography</span>
    <% end %>
</nav>

<div class="payment-page">
    <div class="payment-container">
        <div class="payment-header">
            <div class="payment-icon">ðŸŽ“</div>
            <h1>Complete Your Enrollment</h1>
            <p>You're one step away from starting your photography journey</p>
        </div>

        <div class="payment-card">
            <div class="enrollment-summary">
                <h2>Enrollment Summary</h2>

                <div class="summary-row">
                    <span class="label">Name</span>
                    <span class="value"><%= @enrollment.full_name %></span>
                </div>

                <div class="summary-row">
                    <span class="label">Email</span>
                    <span class="value"><%= @enrollment.email %></span>
                </div>

                <div class="summary-row">
                    <span class="label">Phone</span>
                    <span class="value"><%= @enrollment.phone %></span>
                </div>

                <div class="summary-row">
                    <span class="label">Experience Level</span>
                    <span class="value"><%= @enrollment.experience_level %></span>
                </div>

                <div class="program-box">
                    <div class="program-label">Selected Program</div>
                    <div class="program-name"><%= @enrollment.program_name %></div>
                    <div class="program-description"><%= @enrollment.program_details[:description] %></div>
                </div>

                <div class="amount-section">
                    <div class="amount-row total">
                        <span class="label">Amount to Pay</span>
                        <span class="value">â‚¦<%= number_with_delimiter(@amount) %></span>
                    </div>
                </div>
            </div>

            <%= form_with url: training_initiate_payment_path(enrollment_id: @enrollment.id), method: :post, data: { turbo: false }, class: "payment-form" do %>
                <button type="submit" class="pay-button">
                    <span class="button-text">Pay â‚¦<%= number_with_delimiter(@amount) %></span>
                    <span class="button-subtext">Secure payment via Paystack</span>
                </button>
            <% end %>

            <div class="payment-note">
                <p>ðŸ”’ Your payment is secured by Paystack</p>
                <p>After payment, you'll receive a confirmation email with next steps.</p>
            </div>
        </div>

        <div class="back-link">
            <%= link_to "â† Back to Training Page", training_path %>
        </div>
    </div>
</div>

<style>
    .payment-page {
        min-height: 100vh;
        padding: 120px 20px 60px;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .payment-container {
        max-width: 500px;
        width: 100%;
    }

    .payment-header {
        text-align: center;
        margin-bottom: 2rem;
    }

    .payment-icon {
        font-size: 3rem;
        margin-bottom: 1rem;
    }

    .payment-header h1 {
        font-family: 'Playfair Display', serif;
        font-size: 2rem;
        font-weight: 500;
        margin-bottom: 0.5rem;
    }

    .payment-header p {
        color: var(--warm-gray);
    }

    .payment-card {
        background: rgba(255, 255, 255, 0.02);
        border: 1px solid rgba(255, 255, 255, 0.1);
        padding: 2rem;
    }

    .enrollment-summary h2 {
        font-family: 'Playfair Display', serif;
        font-size: 1.25rem;
        font-weight: 500;
        margin-bottom: 1.5rem;
        padding-bottom: 1rem;
        border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    }

    .summary-row {
        display: flex;
        justify-content: space-between;
        padding: 0.75rem 0;
        border-bottom: 1px solid rgba(255, 255, 255, 0.05);
    }

    .summary-row .label {
        color: var(--warm-gray);
        font-size: 0.9rem;
    }

    .summary-row .value {
        color: var(--cream);
        font-weight: 500;
    }

    .program-box {
        background: linear-gradient(135deg, rgba(201, 162, 39, 0.15) 0%, rgba(201, 162, 39, 0.05) 100%);
        border: 1px solid var(--gold);
        padding: 1.5rem;
        margin: 1.5rem 0;
        text-align: center;
    }

    .program-label {
        font-size: 0.75rem;
        letter-spacing: 0.2em;
        text-transform: uppercase;
        color: var(--gold);
        margin-bottom: 0.5rem;
    }

    .program-name {
        font-family: 'Playfair Display', serif;
        font-size: 1.5rem;
        font-weight: 500;
        margin-bottom: 0.25rem;
    }

    .program-description {
        color: var(--warm-gray);
        font-size: 0.9rem;
    }

    .amount-section {
        margin-top: 1.5rem;
        padding-top: 1.5rem;
        border-top: 2px dashed rgba(255, 255, 255, 0.1);
    }

    .amount-row {
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .amount-row.total .label {
        font-size: 1rem;
        font-weight: 600;
    }

    .amount-row.total .value {
        font-size: 1.75rem;
        font-weight: 600;
        color: var(--gold);
    }

    .payment-form {
        margin-top: 2rem;
    }

    .pay-button {
        width: 100%;
        background: var(--gold);
        border: none;
        padding: 1.25rem;
        cursor: pointer;
        transition: all 0.3s ease;
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    .pay-button:hover {
        background: var(--cream);
        transform: translateY(-2px);
        box-shadow: 0 10px 30px rgba(201, 162, 39, 0.3);
    }

    .button-text {
        font-family: 'DM Sans', sans-serif;
        font-size: 1.1rem;
        font-weight: 700;
        color: var(--warm-black);
        letter-spacing: 0.05em;
    }

    .button-subtext {
        font-size: 0.75rem;
        color: rgba(0, 0, 0, 0.6);
        margin-top: 0.25rem;
    }

    .payment-note {
        margin-top: 1.5rem;
        text-align: center;
    }

    .payment-note p {
        color: var(--warm-gray);
        font-size: 0.85rem;
        margin-bottom: 0.5rem;
    }

    .back-link {
        text-align: center;
        margin-top: 2rem;
    }

    .back-link a {
        color: var(--warm-gray);
        text-decoration: none;
        font-size: 0.9rem;
        transition: color 0.3s ease;
    }

    .back-link a:hover {
        color: var(--gold);
    }

    @media (max-width: 600px) {
        .payment-page {
            padding: 100px 15px 40px;
        }

        .payment-card {
            padding: 1.5rem;
        }

        .amount-row.total .value {
            font-size: 1.5rem;
        }
    }
</style>
